using System;
using System.Collections.Generic;
using System.Linq;

  public static class Kata
    {
        public static object[] RemoveEveryOther(object[] arr)
        {
            // happy coding
            List<object> array = arr.ToList();
            
            object[] everyOther = array.Where((item, index) => index % 2 == 0).ToArray();
            return everyOther;
        }
    }
